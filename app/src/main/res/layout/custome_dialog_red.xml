<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:background="@color/colorLightRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title_Red"
                android:layout_marginTop="@dimen/_26sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/pressRed"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_22ssp"
                />

            <ImageView
                android:id="@+id/imgRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/error"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/tvInfo_Red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18ssp"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/infogreen"/>

            <Button
                android:id="@+id/btnDone_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_52sdp"
                android:layout_marginTop="@dimen/_26sdp"
                android:text="@string/done"
                android:layout_marginBottom="@dimen/_26sdp"
                android:background="@drawable/btn_cust"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textSize="@dimen/_18ssp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>